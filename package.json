{
  "name": "synapse",
  "version": "1.0.0",
  "description": "Sync Twitter bookmarks and likes to Obsidian with AI-powered categorization",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "fetch": "node src/index.js",
    "fetch:full": "node src/index.js --full",
    "dry-run": "node src/index.js --dry-run",
    "dry-run:full": "node src/index.js --dry-run --full",
    "likes": "node src/likes.js",
    "likes:full": "node src/likes.js --full",
    "likes:dry-run": "node src/likes.js --dry-run",
    "likes:dry-run:full": "node src/likes.js --dry-run --full",
    "organize": "node src/organize.js",
    "organize:dry-run": "node src/organize.js --dry-run",
    "organize:bookmarks": "node src/organize.js --target=Twitter\\ Bookmarks",
    "organize:likes": "node src/organize.js --target=Twitter\\ Likes"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

